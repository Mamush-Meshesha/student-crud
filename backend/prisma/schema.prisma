generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  password  String
  major     String?
  phone     String?
  address   Address? @relation(fields: [addressId], references: [id])
  addressId Int?

  birthDate      DateTime?
  enrollmentDate DateTime  @default(now())
  academicYear   String?
  gpa            Float?
  status         String?

  age        Int?
  pictureUrl String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Address {
  id       Int       @id @default(autoincrement())
  street   String?
  city     String?
  state    String?
  zipCode  String?
  students Student[]
}
